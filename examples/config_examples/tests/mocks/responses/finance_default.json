{
  "initialize": {
    "version": "1.0.0",
    "name": "mock-finance-server"
  },
  "list_tools": {
    "tools": [
      {
        "name": "get_stock_quote",
        "description": "Get the current price and information for a stock",
        "arguments": [
          {
            "name": "symbol",
            "description": "Stock symbol (e.g., AAPL, MSFT)",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ]
      },
      {
        "name": "get_stock_history",
        "description": "Get historical stock data",
        "arguments": [
          {
            "name": "symbol",
            "description": "Stock symbol (e.g., AAPL, MSFT)",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "interval",
            "description": "Data interval",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["1d", "1w", "1m"],
              "default": "1d"
            }
          },
          {
            "name": "period",
            "description": "Time period",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["1m", "3m", "6m", "1y", "5y"],
              "default": "1m"
            }
          }
        ]
      },
      {
        "name": "get_crypto_price",
        "description": "Get the current price of a cryptocurrency",
        "arguments": [
          {
            "name": "symbol",
            "description": "Cryptocurrency symbol (e.g., BTC, ETH)",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ]
      },
      {
        "name": "get_crypto_history",
        "description": "Get historical cryptocurrency data",
        "arguments": [
          {
            "name": "symbol",
            "description": "Cryptocurrency symbol (e.g., BTC, ETH)",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "interval",
            "description": "Data interval",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["1d", "1w", "1m"],
              "default": "1d"
            }
          },
          {
            "name": "period",
            "description": "Time period",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["1m", "3m", "6m", "1y", "5y"],
              "default": "1m"
            }
          }
        ]
      }
    ]
  },
